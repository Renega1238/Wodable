<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".UserInfo">

    <Button
        android:id="@+id/userinofhomebutton"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/diseno_botones"
        android:textColor="@drawable/texto_botones"
        android:gravity="center"
        android:onClick="home"
        android:text="home"
         />

    <EditText
        android:id="@+id/UserInfoNombreEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#6E6868"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#1016D5" />

    <EditText
        android:id="@+id/UserInfoApellidoEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6E6868"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Apellido "
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#1016D5" />

    <Button
        android:id="@+id/userinfosafe"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginBottom="470dp"
        android:background="@drawable/diseno_botones"
        android:gravity="center"
        android:onClick="safe"
        android:text="safe"
        android:textColor="@drawable/texto_botones" />

</LinearLayout>