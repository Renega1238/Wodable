<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LogUserActivity">

    <TextView
        android:id="@+id/Bienvenido"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="BIENVENIDO"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FAFAFA"
        android:gravity="center"
         />

    <ImageView
        android:id="@+id/fotito"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ejercicio1" />

    <EditText
        android:id="@+id/loginnombreentry"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#605F5F"
        android:inputType="textPersonName"
        android:textColor="#FAFAFA"
        android:layout_marginTop="10dp"
        android:hint="Nombre"
        android:text="" />



    <EditText
        android:id="@+id/logincontrasena"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#605F5F"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:text=""
        android:textColor="#FAFAFA" />

    <Button
        android:id="@+id/registrarsebutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/diseno_botones"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@drawable/texto_botones"
        android:visibility="invisible"
        android:text="Registrarse" />

    <Button
        android:id="@+id/iniciarsesionbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/diseno_botones"
        android:gravity="center"
        android:onClick="iniciarSesion"
        android:text="Iniciar Sesion"
        android:textColor="@color/white" />

</LinearLayout>