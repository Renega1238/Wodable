<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    tools:context=".ProfileInfoActivity">

    <TextView
        android:id="@+id/saludoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="42dp"
        android:text="Hola Mario"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3C43CD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblDatosPersonales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Datos personales"
        android:textColor="#1535EA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/saludoProfile"
        app:layout_constraintTop_toBottomOf="@+id/saludoProfile" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:textColor="#121111"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/pesoTextView"
        app:layout_constraintStart_toStartOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textColor="#131313"
        app:layout_constraintBaseline_toBaselineOf="@+id/alturaTextView"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/lblBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Fecha de nacimiento"
        android:textColor="#0C0C0C"
        app:layout_constraintBaseline_toBaselineOf="@+id/fechaNacTextView"
        app:layout_constraintEnd_toEndOf="@+id/lblDatosPersonales" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="94dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEditarDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IMCTextView"
        app:srcCompat="@drawable/user" />

    <Button
        android:id="@+id/buttonEditarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/diseno_botones"
        android:gravity="center"
        android:onClick="editar"
        android:text="Editar datos"
        android:textColor="@drawable/texto_botones"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
        app:layout_constraintEnd_toStartOf="@+id/buttonIrMenu"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:textColor="#131313"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblGenero"
        app:layout_constraintStart_toStartOf="@+id/lblBirthday" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I.M.C"
        android:textColor="#0B0A0A"
        app:layout_constraintBaseline_toBaselineOf="@+id/IMCTextView"
        app:layout_constraintStart_toStartOf="@+id/textView7" />

    <TextView
        android:id="@+id/lblGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Genero"
        android:textColor="#131313"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/lblBirthday" />

    <TextView
        android:id="@+id/fechaNacTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:text="Fecha"
        app:layout_constraintStart_toEndOf="@+id/lblBirthday"
        app:layout_constraintTop_toBottomOf="@+id/lblDatosPersonales" />

    <TextView
        android:id="@+id/generoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="Genero"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/alturaTextView" />

    <TextView
        android:id="@+id/alturaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:text="Altura"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/generoTextView" />

    <TextView
        android:id="@+id/pesoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:text="Peso"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/alturaTextView" />

    <TextView
        android:id="@+id/IMCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:text="Peso"
        app:layout_constraintStart_toStartOf="@+id/pesoTextView"
        app:layout_constraintTop_toBottomOf="@+id/pesoTextView" />

    <Button
        android:id="@+id/buttonIrMenu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="109dp"
        android:background="@drawable/diseno_botones"
        android:gravity="center"
        android:onClick="goToMenuGrid"
        android:text="Ir al menu"
        android:textColor="@drawable/texto_botones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonEditarDatos" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/diseno_botones"
        android:onClick="logOut"
        android:text="Salir"
        android:textColor="@drawable/texto_botones"
        app:layout_constraintEnd_toStartOf="@+id/buttonIrMenu"
        app:layout_constraintTop_toBottomOf="@+id/buttonIrMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>