<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030404"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DailyStepsActivity">

    <Button
        android:id="@+id/DailyStepsHomeButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:onClick="home"
        android:textAlignment="center"
        android:textColor="@drawable/texto_botones"
        android:background="@drawable/diseno_botones"
        android:text="home" />

    <TextView
        android:id="@+id/DailyStepsQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FAFAFA"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="What's your goal today?" />

    <EditText
        android:id="@+id/DailyStepsEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:textColor="#FAFAFA"
        android:layout_marginTop="100dp"
        android:background="#ADB1B1"
        android:textAlignment="center"
        android:inputType="number"
        android:hint="Goal"
        android:text="" />

    <Button
        android:id="@+id/DailyStepsUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:onClick="newStep"
        android:textColor="@drawable/texto_botones"
        android:background="@drawable/diseno_botones"
        android:text="START" />

    <Button
        android:id="@+id/DailyStepsEndButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="150dp"
        android:onClick="endSteps"
        android:textColor="@drawable/texto_botones"
        android:background="@drawable/diseno_botones"
        android:text="FINISH" />

    <Button
        android:id="@+id/DailyStepsContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="235dp"
        android:onClick="continuestep"
        android:textColor="@drawable/texto_botones"
        android:background="@drawable/diseno_botones"
        android:text="Continue" />

    <Button
        android:id="@+id/DailyStepsFinishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="235dp"
        android:onClick="stop"
        android:textColor="@drawable/texto_botones"
        android:background="@drawable/diseno_botones"
        android:text="PAUSE" />

    <ProgressBar
        android:id="@+id/DailyStepsProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar_gradient"
        android:background="@drawable/circle_shape"
        />

    <TextView
        android:id="@+id/DailyStepsPasos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="133dp"
        android:textSize="50sp"
        android:text="0" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="133dp"
        android:id="@+id/DailyStepsTotal"
        android:layout_width="100dp"
        android:textColor="#F40000"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/DailyStepsFinalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Hola"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"/>


</RelativeLayout>